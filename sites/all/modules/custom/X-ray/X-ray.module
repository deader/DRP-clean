/** 
*  Реализация hook_form_alter() выводит идентификатор каждой формы. 
*/ 
	function xray_form_alter(&$form, &$form_state, $form_id){ 
		$form['xray_display_form_id'] = array( 
			'#type'  =>  'item', 
			'#title'  => t('Form ID'), 
			'#markup'  => $form_id, 
			'#weight'  =>  -100, 
		); 
	}